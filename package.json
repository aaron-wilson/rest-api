{
  "name": "rest-api",
  "version": "1.0.0",
  "description": "TypeScript-first REST API built with Bun and Hono",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["bun", "hono", "typescript", "rest-api", "aws"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  }
}
